<Window x:Class="PIIIProject.Views.CurrentTotalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIIIProject.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="CurrentTotalWindow" Height="500" Width="400">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        
        
        <TextBlock Grid.Row="0" FontSize="20" HorizontalAlignment="Center" FontWeight="Bold">Cart Items</TextBlock>

        <StackPanel Grid.Row="1" x:Name="ProductList" Orientation="Vertical" Margin="10 0 0 0"></StackPanel>
        
        <Button Grid.Row="2" Name="AddButton" Height="20" Margin="10" Width="100" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold" Click="btn_CloseClick">
            OK
        </Button>
    </Grid>
</Window>
